<?xml version='1.1' encoding='utf-8'?>
<widget id="io.agenda.liber" version="1.3.4" xmlns:gap="http://phonegap.com/ns/1.1" xmlns:cdv="http://cordova.apache.org/ns/1.1">
    <name>Agenda Escola LÃ­ber</name>
    <description>
        Aplicativo da Escola Liber. Acompanhe a vida escolar dos seus filhos de onde estiver.
    </description>

    <author email="contato@doctum.edu.br" href="http://www.doctum.edu.br">
        Equipe de Desenvolvimento Mobile - Doctum
    </author>

    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" source="npm"/>
    <plugin name="cordova-plugin-splashscreen" source="npm"/>
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    
    <!-- Requires cli-8.0.0 but we recommend using the latest version. -->
    <preference name="phonegap-version" value="cli-9.0.0" /> 
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="22" />

    <preference name="Orientation" value="portrait" />

    <!-- Can omit if not targetting Windows Phone -->
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="WindowsToastCapable" value="true" />

    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
   
    
    <splash src="./www/img/Default@2x~universal~anyany.png" />
    <splash src="./www/img/Default@2x~universal~comany.png" />
    <splash src="./www/img/Default@2x~universal~comcom.png" />
    <splash src="./www/img/Default@3x~universal~anyany.png" />
    <splash src="./www/img/Default@3x~universal~anycom.png" />
    <splash src="./www/img/Default@3x~universal~comany.png" />
    
    <platform name="android">
        <plugin name="onesignal-cordova-plugin"  source="npm"/> 
        <allow-intent href="market:*" />
        <icon density="ldpi" src="./res/ios/logo40x40.png" width="40" height="40"/>
        <icon density="mdpi" src="./res/ios/logo120x120.png" width="120" height="120"/>
        <icon density="hdpi" src="./res/ios/logo152x152.png" width="152" height="152"/>
        <icon density="xhdpi" src="./res/ios/logo167x167.png" width="167" height="167"/>
        <icon density="xxxhdpi" src="./res/ios/logo1024x1024.png" width="1024" height="1024"/>
    </platform>

    <platform name="ios">
          <!--  <resource-file src="./agenda.entitlements" /> -->
        <allow-intent href="market:*" />
        <icon density="ldpi" src="./res/ios/logo40x40.png" width="40" height="40"/>
        <icon density="mdpi" src="./res/ios/logo120x120.png" width="120" height="120"/>
        <icon density="hdpi" src="./res/ios/logo152x152.png" width="152" height="152"/>
        <icon density="xhdpi" src="./res/ios/logo167x167.png" width="167" height="167"/>
        <icon density="xxxhdpi" src="./res/ios/logo1024x1024.png" width="1024" height="1024"/>
        
    </platform>
    
</widget>