<?xml version='1.0' encoding='utf-8'?>
<widget id="io.agenda.liber2" version="2.0.11" xmlns:cdv="http://cordova.apache.org/ns/1.1" xmlns:gap="http://phonegap.com/ns/1.1">
    <name>Agenda Escola Líber 2.0</name>
    <description>
        Aplicativo da Escola Liber. Acompanhe a vida escolar dos seus filhos de onde estiver.
    </description>
    <author email="contato@doctum.edu.br" href="http://www.doctum.edu.br">
        Equipe de Desenvolvimento Mobile - Doctum
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    
    <gap:plugin name="onesignal-cordova-plugin" source="npm" spec="2.11.0" />
    <preference name="phonegap-version" value="cli-10.0.0" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="23" />
    <preference name="Orientation" value="portrait" />
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="WindowsToastCapable" value="true" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <splash src="./www/img/Default@2x~universal~anyany.png" />
    <splash src="./www/img/Default@2x~universal~comany.png" />
    <splash src="./www/img/Default@2x~universal~comcom.png" />
    <splash src="./www/img/Default@3x~universal~anyany.png" />
    <splash src="./www/img/Default@3x~universal~anycom.png" />
    <splash src="./www/img/Default@3x~universal~comany.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" height="40" src="./res/ios/logo40x40.png" width="40" />
        <icon density="mdpi" height="120" src="./res/ios/logo120x120.png" width="120" />
        <icon density="hdpi" height="152" src="./res/ios/logo152x152.png" width="152" />
        <icon density="xhdpi" height="167" src="./res/ios/logo167x167.png" width="167" />
        <icon density="xxxhdpi" height="1024" src="./res/ios/logo1024x1024.png" width="1024" />
    </platform>
    <platform name="ios">
        <preference name="deployment-target" value="11.0" />
        <preference name="AllowUntrustedCerts"  value="true" />
      <preference name="InterceptRemoteRequests" value="all" />
      <preference name="allowFileAccessFromFileURLs" value="true" />
      <preference name="allowUniversalAccessFromFileURLs" value="true" />


        <config-file overwrite="true" parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
            <string>A camera é usada opcionalmente para incluir foto do estudante em seu perfil</string>
        </config-file>

        <config-file overwrite="true" parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>A biblioteca de fotos pode ser usada para selecionar uma foto do estudante e colocá-la em seu perfil.</string>
        </config-file>
        <config-file overwrite="true" parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>Podemos solicitar acesso a sua localização caso você use a funcionalidade de embarque/desembarque</string>
        </config-file>
        <access origin="*" />
        <allow-intent href="market:*" />
        <allow-intent href="*" />
        
        <icon density="ldpi" height="40" src="./res/ios/logo40x40.png" width="40" />
        <icon density="mdpi" height="120" src="./res/ios/logo120x120.png" width="120" />
        <icon density="hdpi" height="152" src="./res/ios/logo152x152.png" width="152" />
        <icon density="xhdpi" height="167" src="./res/ios/logo167x167.png" width="167" />
        <icon density="xxxhdpi" height="1024" src="./res/ios/logo1024x1024.png" width="1024" />
    
    </platform>
</widget>
