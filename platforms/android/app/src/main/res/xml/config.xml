<?xml version='1.0' encoding='utf-8'?>
<widget id="io.agenda.liber2" version="2.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.1" xmlns:gap="http://phonegap.com/ns/1.1">
    <feature name="PhotoViewer">
        <param name="android-package" value="com.sarriaroman.PhotoViewer.PhotoViewer" />
    </feature>
    <feature name="Permissions">
        <param name="android-package" value="com.android.plugins.Permissions" />
    </feature>
    <feature name="CameraPreview">
        <param name="android-package" value="com.cordovaplugincamerapreview.CameraPreview" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Photos">
        <param name="android-package" value="com.domax.cordova.Photos" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="OneSignalPush">
        <param name="android-package" value="com.plugin.gcm.OneSignalPush" />
    </feature>
    <name>Agenda Escola LÃ­ber</name>
    <description>
        Aplicativo da Escola Liber. Acompanhe a vida escolar dos seus filhos de onde estiver.
    </description>
    <author email="contato@doctum.edu.br" href="http://www.doctum.edu.br">
        Equipe de Desenvolvimento Mobile - Doctum
    </author>
    <content src="index.html" />
    <gap:plugin name="onesignal-cordova-plugin" source="npm" spec="2.4.5" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <splash src="./www/img/Default@2x~universal~anyany.png" />
    <splash src="./www/img/Default@2x~universal~comany.png" />
    <splash src="./www/img/Default@2x~universal~comcom.png" />
    <splash src="./www/img/Default@3x~universal~anyany.png" />
    <splash src="./www/img/Default@3x~universal~anycom.png" />
    <splash src="./www/img/Default@3x~universal~comany.png" />
    <allow-intent href="market:*" />
    <icon density="ldpi" height="40" src="./res/ios/logo40x40.png" width="40" />
    <icon density="mdpi" height="120" src="./res/ios/logo120x120.png" width="120" />
    <icon density="hdpi" height="152" src="./res/ios/logo152x152.png" width="152" />
    <icon density="xhdpi" height="167" src="./res/ios/logo167x167.png" width="167" />
    <icon density="xxxhdpi" height="1024" src="./res/ios/logo1024x1024.png" width="1024" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="phonegap-version" value="cli-10.0.0" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="23" />
    <preference name="Orientation" value="portrait" />
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="WindowsToastCapable" value="true" />
</widget>
